			<div class="container position-relative display-6 py-5" id="shopScreen">
				
                <br>
                <h2>Cart: </h2>

				<!--Products in cart-->

				<% content.forEach(function(item) { %>
                <% console.log('Item is: ' + item.product_id) %>
				<div class="col" style="width: 15rem; margin: 0rem;">
					<div class="card m-2" style="width: 16rem;">
						<a href="#">
							<img src="../public/images/<%= item.image %>.png" class="card-img-top" height="200" alt="Product" style="padding: 20px; height: 17rem; border-radius: 30px;"/>
						</a>
						<div class="card-body">
							<h5 class="card-title"><%= item.product_name %></h5>
							<p class="card-text" style="font-size: 14px">Quantity: <%= item.quantity %></p>
							<p class="card-text" style="font-size: 14px">CA$<%= item.cost %></p>
							<form action="/cart-remove" method="POST">
                                <input type="hidden" name="id" value="<%= item.product_id %>">
                                <input type="hidden" name="cart_id" value="<%= item.order_id %>">                                
                                <button type="submit"class="btn btn-primary">Remove</button>
                            </form>
						</div>
					</div>
				</div>
				<br>

                <% }) %>


